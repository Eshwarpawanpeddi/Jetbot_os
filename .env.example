# JetBot OS - Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
DEBUG_MODE=false
SECRET_KEY=dev-secret-key-change-in-production

# ESP12E WiFi Configuration (Motor Controller)
ESP12E_IP=192.168.1.50
ESP12E_PORT=80
ESP12E_TIMEOUT=5

# Motor Configuration
MOTOR_MAX_SPEED=255
MOTOR_DEFAULT_SPEED=200
MOTOR_SAFETY_TIMEOUT=5000

# CORS Configuration (allowed origins for mobile app)
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000

# Display Configuration
DISPLAY=:0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/jetbot_server.log

# Optional: WiFi Network Settings for Jetson Nano
# WiFi_SSID=your_network_name
# WiFi_PASSWORD=your_network_password
